@using Microsoft.AspNetCore.Identity
@using MultiSMS.BusinessLogic.Services.Interfaces;
@using MultiSMS.Interface.Entities;
@inject SignInManager<Administrator> SignInManager
@inject UserManager<Administrator> UserManager
@inject IAdministratorService AdministratorService

@{
    var admin = await AdministratorService.GetAdministratorByEmailAsync(UserManager.GetUserName(User)!);
}

@if (SignInManager.IsSignedIn(User))
{
    <nav class="navbar-nav navbar-expand-lg ml-auto">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @admin.Name @admin.Surname
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Zmień hasło</a></li>
                            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/CreateNewAccount">Stwórz nowe konto</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <a id="logout" class="dropdown-item" href="javascript:void(0);">Wyloguj się</a>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <script>
        document.getElementById("logout").addEventListener("click", function (e) {
            document.getElementById("logoutForm").submit();
        });
    </script>
}

<style>
    .container-fluid {
        padding-right: 50px;
    }
</style>
