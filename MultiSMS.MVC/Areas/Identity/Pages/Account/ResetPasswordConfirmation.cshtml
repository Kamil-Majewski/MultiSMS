@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Zresetuj hasło";
}

<div class="single-windows-container">
    <div class="credentials-container">
        <div class="form-subtitle mb-3 text-center">
            <span>Pomyślnie zresetowano hasło.</span>
        </div>
        <button type="button" id="redirect-to-login-button" class="violet-button mb-2" style="width:100%; display:flex; justify-content:center; font-size:19px; height:44px;">
            Powrót do strony logowania
        </button>
    </div>
</div>


<style>
    .toolbar-left {
        display: none;
    }

    .navbar {
        display: none;
    }

    .layout-render-body {
        background-color: transparent;
        box-shadow: none;
    }
</style>

<script>
    $("#redirect-to-login-button").on("click", function () {
        window.location.href = "login";
    });
</script>