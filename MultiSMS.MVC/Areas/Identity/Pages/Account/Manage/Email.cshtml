@page
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<partial name="_StatusMessage" for="StatusMessage" />

<div class="admin-email options-container">
    <div class="option-content">
        <div class="window-header">
            <div class="left">
                <span>Zmiana adresu e-mail</span>
            </div>
        </div>
        <form class="options-form" id="update-admin-email" method="post">
            <div style="margin-bottom:20px;">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="AdminEmail">Obecny email</label>
                            <input asp-for="Email" type="text" class="form-input" id="AdminEmail" required maxlength="30" placeholder="Proszę podać swój obecny adres e-mail" disabled>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="AdminNewEmail">Nowy email</label>
                            <input asp-for="Input.NewEmail" class="form-input" id="AdminNewEmail" autocomplete="email" aria-required="true" style="margin: 0;" placeholder="Proszę podać nowy adres email" required maxlength="30" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="justify-content-center d-flex" style="margin-top: 20px;">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="violet-button violet-button-small" style="width:50%;">Zmień adres e-mail</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(".active-tab").removeClass("active-tab");
    $("#email-tab").parent().toggleClass("active-tab");

    $(document).ready(function () {
        $(document).on('click', "#dismiss-alert-button", function () {
            CalculateHeaderWidthAndToolbarHeight();
        });
    });  
</script>

